rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Portfolio documents - one per user
    match /portfolios/{userId} {
      // Allow read/write for dogmatic1 (development)
      allow read, write: if userId == 'dogmatic1' || userId == 'demo_user';

      // For authenticated users (future):
      // allow read, write: if request.auth != null && request.auth.uid == userId;

      // Subcollections for trades and performance data
      match /trades/{tradeId} {
        allow read, write: if userId == 'dogmatic1' || userId == 'demo_user';
        // allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /performance/{snapshotId} {
        allow read, write: if userId == 'dogmatic1' || userId == 'demo_user';
        // allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Timer documents - one per user
    match /timers/{userId} {
      // Allow read/write for dogmatic1 (development)
      allow read, write: if userId == 'dogmatic1' || userId == 'demo_user';

      // For authenticated users (future):
      // allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow test collection for testing
    match /test_collection/{document} {
      allow read, write: if true;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}